{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "security:check": "npm audit --audit-level=critical",
    "security:check:strict": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "gitleaks": "gitleaks detect --source . --verbose",
    "gitleaks:install": "echo 'Install gitleaks from https://github.com/gitleaks/gitleaks/releases'",
    "pre-commit": "npm run lint && npm run type-check",
    "export": "next build",
    "clean": "rm -rf .next out",
    "clean:win": "if exist .next (rmdir /s /q .next) && if exist out (rmdir /s /q out)",
    "postbuild": "node scripts/postbuild.js",
    "validate": "npm run lint && npm run type-check && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.344.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.26",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.33",
    "husky": "^9.1.7",
    "postcss": "^8.4.33",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "glob": "^10.4.6"
  }
}
